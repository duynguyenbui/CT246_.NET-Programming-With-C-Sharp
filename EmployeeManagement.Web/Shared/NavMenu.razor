@using System.Security.Claims
@inherits NavMenuBase

<div class="top-row ps-3 navbar navbar-light bg-light text-dark border-bottom">
    <!-- Added text-dark class for black text -->
    <div class="container-fluid">
        <a class="navbar-brand" href="">EmployeeManagement</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggle-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable bg-light text-dark" @onclick="ToggleNavMenu">
    <!-- Added text-dark class for black text -->
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link text-dark" href="" Match="NavLinkMatch.All">
                <!-- Added text-dark class for black text -->
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <AuthorizeView Roles="Admin">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link text-dark" href="AddEmployee">
                        <span class="oi oi-plus" aria-hidden="true"></span> Add Employee
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link text-dark" href="EmployeeList">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Manage Employees
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link text-dark" href="DepartmentList">
                        <span class="oi oi-bar-chart" aria-hidden="true"></span> Manage Departments
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link text-dark" href="UserProfile">
                        <span class="oi oi-people" aria-hidden="true"></span> User Profile
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
        <div class="nav-item px-3">
            <AuthorizeView>
                <NotAuthorized>
                    <NavLink class="nav-link text-dark" href="Login">
                        <!-- Added text-dark class for black text -->
                        <span class="oi oi-arrow-right" aria-hidden="true"></span> Login
                    </NavLink>
                </NotAuthorized>
                <Authorized>
                    <div class="nav-link text-dark" href="#" onclick="@DeleteCookie">
                        <!-- Added text-dark class for black text -->
                        <span class="oi oi-arrow-left" aria-hidden="true"></span> Log out
                    </div>
                </Authorized>
            </AuthorizeView>
        </div>
    </nav>
</div>